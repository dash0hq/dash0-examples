FROM openjdk:17-jdk-slim

WORKDIR /app

# Copy gradle files
COPY build.gradle settings.gradle gradlew ./
COPY gradle gradle

# Download dependencies
RUN ./gradlew dependencies --no-daemon

# Copy source code
COPY src src

# Build the application
RUN ./gradlew build --no-daemon

# Run the application without OpenTelemetry agent (will be injected by operator)
EXPOSE 3001
CMD ["java", "-jar", "build/libs/validation-service-0.0.1-SNAPSHOT.jar"]